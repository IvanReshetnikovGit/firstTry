@model int? // Модель содержит Nullable<int>, чтобы можно было передавать null при первом открытии страницы

<h2>Delete Mushroom</h2>

<form asp-action="DeleteMushroomPicker1" method="post">
    <div class="form-group">
        <label for="id">Enter the index of the mushroom picker you want to delete:</label>
        <input type="number" id="id" name="id" class="form-control" value="@Model" required />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
